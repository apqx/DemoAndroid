<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.apqx.demo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--    震动-->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-feature android:name="android.hardware.usb.host" />
    <application
        android:name=".CusApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${appName}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:ignore="UnusedAttribute">

        <meta-data android:name="flavor"
            android:value="${ph_flavor}"/>
        <meta-data android:name="flavorMore"
            android:value="${ph_flavor_more}"/>

        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.TransparentStatusBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.frags.FragsActivity"/>
        <activity android:name=".old.jetpack.JetpackActivity" />
        <activity android:name=".ipc.IpcActivity" />
        <activity android:name=".old.tools.ToolsActivity" />
        <activity android:name=".old.jetpack.databinding.DataBindingActivity" />
        <activity android:name=".old.test.TestActivity" />
        <activity android:name=".old.jetpack.livedata.LiveDataActivity" />
        <activity android:name=".old.jetpack.lifecycle.LifecycleActivity" />
        <activity android:name=".old.mvvm.view.MVVMActivity" />
        <activity android:name=".widget.WidgetActivity" />
        <activity android:name=".old.service.ServiceActivity" />
        <activity android:name=".old.realm.RealmActivity" />
        <activity android:name=".widget.recycler.RecyclerActivity" />
        <activity android:name=".old.usb.UsbActivity" />
        <activity android:name=".widget.view.RelativeActivity" />
        <activity android:name=".widget.list.ListActivity" />
        <activity android:name=".old.fragment.CusFragmentActivity" />
        <activity android:name=".old.web.WebActivity" />
        <activity android:name=".old.recycler.RecyclerActivity" />
        <activity android:name=".view.DrawActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".SecondActivity"
            android:theme="@style/AppTheme.TransparentStatusBar"/>
        <activity android:name=".view.ScrollActivity" />
        <activity android:name=".view.ThemeActivity" />
        <activity android:name=".view.TextActivity" />
        <activity android:name=".view.ThemeActivity" />

        <service
            android:name=".ipc.RemoteService"
            android:process=":ipc" />
        <service android:name="me.apqx.demo.old.service.Service1" />
        <service android:name="me.apqx.demo.old.service.Service2" />
    </application>
</manifest>
