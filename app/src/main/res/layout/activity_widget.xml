<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/sv_img"
            layout="@layout/item_scroll"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_img">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:onClick="onClick"
                    android:text="Relative"
                    />

                <Button
                    android:id="@+id/btn_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:onClick="onClick"
                    android:text="List"
                     />


                <include
                    android:id="@+id/in_tab"
                    layout="@layout/layout_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    />

                <Button
                    android:id="@+id/btn_refreshTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:onClick="onClick"
                    android:text="Refresh Tab"
                    />

                <FrameLayout
                    android:id="@+id/fl_switcherContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/colorAccent"
                    android:padding="10dp"
                    >

                    <me.apqx.demo.widget.view.CusSwitcher
                        android:id="@+id/cs_switcher"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_clickableSpanString"
                    android:layout_width="268.5dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24.5dp"
                    android:paddingRight="25dp"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:text="clickable text"
                     />

                <Button
                    android:id="@+id/btn_showDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Dialog"
                    />

                <Button
                    android:id="@+id/btn_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:onClick="onClick"
                    android:text="RecyclerView" />
                <Button
                    android:id="@+id/btn_showFloating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="show floating"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"/>

                <Button
                    android:id="@+id/btn_hideFloating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="hide floating"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"/>
                <me.apqx.demo.widget.view.HorizontalPager
                    android:id="@+id/in_hp"
                    android:layout_width="match_parent"
                    android:layout_height="190dp" />
                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="测试文本"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:rowCount="2"
                    android:columnCount="2">
                    <TextView
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="1"
                        android:background="@android:color/black"/>
                    <TextView
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="1"
                        android:background="@android:color/holo_orange_light"/>
                    <TextView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="1"
                        android:background="@android:color/holo_red_light"/>
                    <TextView
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="1"
                        android:background="@android:color/holo_green_light"/>
                </GridLayout>
            </LinearLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
