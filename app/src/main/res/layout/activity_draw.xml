<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <me.apqx.demo.widget.view.CustomDrawView
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <me.apqx.demo.widget.view.CusBtn
        android:id="@+id/cusView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:text="测试"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>

    <Switch
        android:id="@+id/sw_switch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text= "測試"
        android:drawableBottom="@drawable/drawable_gap_line"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/drawable_gap_line"
        android:text="hadlf"/>
</LinearLayout>