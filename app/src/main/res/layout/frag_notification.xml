<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/btn_show_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Show"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_dismiss_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Dismiss"
        app:layout_constraintStart_toEndOf="@+id/btn_show_notify"
        app:layout_constraintTop_toTopOf="@+id/btn_show_notify" />

    <Button
        android:id="@+id/btn_notify_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ring"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_notify" />

    <Button
        android:id="@+id/btn_notify_vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_notify_ring" />

    <Button
        android:id="@+id/btn_notify_vibrate_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        app:layout_constraintStart_toEndOf="@+id/btn_notify_vibrate"
        app:layout_constraintTop_toTopOf="@+id/btn_notify_vibrate" />

    <Button
        android:id="@+id/btn_notify_ring_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        app:layout_constraintStart_toEndOf="@+id/btn_notify_ring"
        app:layout_constraintTop_toTopOf="@+id/btn_notify_ring" />

</androidx.constraintlayout.widget.ConstraintLayout>